<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/f"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="19dp"
        android:background="@drawable/box"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/atma_semibold"
            android:text="Get All Schemes"
            android:textColor="#bc6a5f"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="30dp"
            android:text="Email ID : "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="20dp"
            android:drawableTint="@color/mainbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/mainbg"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/box"
            android:ems="10"
            android:textColorHint="@color/mainbg"
            android:hint="Enter your email id "
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="30dp"
            android:text="Password : "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password"
            android:drawableLeft="@drawable/password"
            android:textColor="@color/mainbg"
            android:drawablePadding="20dp"
            android:drawableTint="@color/mainbg"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/box"
            android:ems="10"
            android:hint="Enter your password"
            android:textColorHint="@color/mainbg"
            android:inputType="textPassword"
            android:padding="10dp" />

        <Button
            android:id="@+id/signIn"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:textColor="@color/whitebg"
            android:background="@drawable/buttonbg"
            android:text="Sign In" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_signin"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---or continue with--- "
        android:textColor="@color/whitebg"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/google"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView

        android:layout_width="50dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:src="@drawable/google" />
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Google   "
            android:textColor="@color/white"/>
<!--            android:textColor="#DC4343"-->


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an Account..? "
            android:textColor="@color/whitebg"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up Here"
            android:textColor="#EA2106"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>
